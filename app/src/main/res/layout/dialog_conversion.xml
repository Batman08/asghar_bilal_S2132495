<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">
    <!-- Note: We are now using 16dp padding on the root view for cleaner spacing. -->

    <!-- Header Section with Title and Close Button (using RelativeLayout for positioning) -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/dialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Currency Conversion Tool"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <!-- Close Button (positioned top right) -->
        <ImageButton
            android:id="@+id/closeButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:contentDescription="Close Conversion Dialog"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"/>
    </RelativeLayout>

    <!-- Conversion Direction Selection -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Conversion Direction:"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <RadioGroup
        android:id="@+id/conversionDirectionGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:checkedButton="@id/radioGbpToForeign"
        android:layout_marginBottom="20dp">

        <!-- GBP to Foreign -->
        <RadioButton
            android:id="@+id/radioGbpToForeign"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="GBP → [CODE]"
            android:padding="10dp"
            android:button="@null"
            android:gravity="center"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/radio_button_text_color"
            android:background="@drawable/ic_radio_selector_background"
            android:layout_marginEnd="4dp"/>

        <!-- Foreign to GBP -->
        <RadioButton
            android:id="@+id/radioForeignToGbp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="[CODE] → GBP"
            android:padding="10dp"
            android:button="@null"
            android:gravity="center"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/radio_button_text_color"
            android:background="@drawable/ic_radio_selector_background"
            android:layout_marginStart="4dp"/>
    </RadioGroup>

    <!-- Exchange Rate Display -->
    <TextView
        android:id="@+id/exchangeRateDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rate: 1.00 GBP = X.XXX [CODE]"
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginBottom="20dp" />

    <!-- Input Field (Source Currency Amount) -->
    <TextView
        android:id="@+id/inputLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter amount (in GBP):"
        android:textSize="14sp"
        android:textColor="@android:color/black"/>

    <EditText
        android:id="@+id/inputAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="0.00"
        android:textSize="24sp"
        android:padding="12dp"
        android:background="@drawable/edittext_border"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"/>

    <!-- Display for the converted result -->
    <TextView
        android:id="@+id/resultDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="?attr/colorPrimaryDark"
        android:textAlignment="center"
        android:padding="12dp"
        android:background="#E0F7FA"
        android:elevation="2dp"
        android:layout_marginTop="8dp"/>

</LinearLayout>