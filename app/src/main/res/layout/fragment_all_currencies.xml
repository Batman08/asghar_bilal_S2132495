<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Search/Filter Bar -->
    <EditText
        android:id="@+id/searchEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/edittext_border"
        android:hint="Search by Name, Code (e.g., JPY), or Country"
        android:inputType="text"
        android:padding="10dp" />

    <!-- The list view for all currencies -->
    <ListView
        android:id="@+id/currencyListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="#DDDDDD"
        android:dividerHeight="1dp"
        android:padding="4dp" />

    <!-- Text to show when the list is empty (set as emptyView in Fragment) -->
    <TextView
        android:id="@+id/emptyTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="No currency data available."
        android:textSize="18sp"
        android:visibility="gone" />

</LinearLayout>