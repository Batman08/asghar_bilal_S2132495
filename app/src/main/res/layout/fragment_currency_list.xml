<?xml version="1.0" encoding="utf-8"?>
<!-- Layout for both the Main and All Currencies views -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- List to display currency items -->
    <ListView
        android:id="@+id/currencyListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#DDDDDD"
        android:dividerHeight="1dp"
        android:padding="4dp" />

    <!-- Text to show when the list is empty (set as emptyView in Fragment) -->
    <TextView
        android:id="@+id/emptyTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="No currency data available."
        android:textSize="18sp"
        android:visibility="gone" />

</LinearLayout>